<!DOCTYPE html>
<html>
  <head>
    <title>BookReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

  <nav = class "navbar navbar-default">
    <div class="containter">
    			<div class="navbar-header"> </div>

            <% if user_signed_in? %>

              <ul class="nav navbar-nav">
                <li class="navbar-nav"><%=link_to "Home", root_path %></li>
            		<li class="navbar-nav"><%= link_to "Book Review", books_path %></li>
                <li class="navbar-nav"><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li>
              
                <% if current_user.profile == nil %>
                    <li class="nav navbar-nav navbar-right"><%= link_to "Create Profile", "/users/#{current_user.id}/profiles/new/" %></li>

                <% else %>
                    <li class="nav navbar-nav navbar-right"><%= link_to "View Your Profile", "/users/#{current_user.id}/profiles/#{current_user.profile.id}"%></li>
                  <% end %>   
                </ul>

              
                <ul class="nav navbar-nav navbar-right">
                  <li class= "navbar-nav"><%= link_to "Add Book", new_book_path%></li>
                  <li class= "navbar-nav">
                </ul>
            
  
          <% else %>
           <%= link_to "Sign Up", new_user_registration_path, class: "navbar-brand" %>
           <%= link_to "Log In", new_user_session_path, class: "navbar-brand" %>
          <% end %>
          
      </div>
  </div>
</nav>
  

	<p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>

  <div class="container">
    <%= yield %>
  </div>
  
  </body>
</html>
